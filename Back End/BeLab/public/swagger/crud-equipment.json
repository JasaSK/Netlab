{
  "openapi": "3.0.3",
  "info": {
    "title": "Equipment API",
    "version": "1.0.0",
    "description": "CRUD API untuk peralatan yang berelasi dengan kategori"
  },
  "servers": [
    {
      "url": "http://localhost:8001"
    }
  ],
  "paths": {
    "/api/equipment": {
      "get": {
        "summary": "Ambil semua peralatan",
        "operationId": "getEquipments",
        "responses": {
          "200": {
            "description": "Data peralatan ditemukan"
          }
        }
      }
    },
    "/api/equipment/create": {
      "post": {
        "summary": "Tambah peralatan",
        "operationId": "createEquipment",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "category_id": { "type": "integer" },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "description": { "type": "string" }
                },
                "required": ["name", "category_id"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Peralatan berhasil ditambahkan" },
          "400": { "description": "Input tidak valid" }
        }
      }
    },
    "/api/equipment/show/{id}": {
      "get": {
        "summary": "Ambil peralatan berdasarkan ID",
        "operationId": "getEquipmentById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Peralatan ditemukan" },
          "404": { "description": "Peralatan tidak ditemukan" }
        }
      }
    },
    "/api/equipment/update/{id}": {
      "put": {
        "summary": "Update data peralatan",
        "operationId": "updateEquipment",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "category_id": { "type": "integer" },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "description": { "type": "string" }
                },
                "required": ["name", "category_id"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Data berhasil diupdate" },
          "404": { "description": "Peralatan tidak ditemukan" }
        }
      }
    },
    "/api/equipment/destroy/{id}": {
      "delete": {
        "summary": "Hapus peralatan berdasarkan ID",
        "operationId": "deleteEquipment",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Peralatan berhasil dihapus" },
          "404": { "description": "Peralatan tidak ditemukan" }
        }
      }
    }
  }
}
