{
  "openapi": "3.0.3",
  "info": {
    "title": "About API",
    "description": "API CRUD untuk informasi halaman About",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8001/api"
    }
  ],
  "paths": {
    "/abouts": {
      "get": {
        "summary": "List semua data about",
        "operationId": "getAbouts",
        "responses": {
          "200": {
            "description": "Berhasil mengambil data about"
          }
        }
      }
    },
    "/abouts/create": {
      "post": {
        "summary": "Tambah data about",
        "operationId": "createAbout",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" }
                },
                "required": ["title", "description"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Data about berhasil ditambahkan"
          },
          "400": {
            "description": "Validasi gagal"
          }
        }
      }
    },
    "/abouts/show/{id}": {
      "get": {
        "summary": "Ambil detail about berdasarkan ID",
        "operationId": "getAboutById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Data about ditemukan"
          },
          "404": {
            "description": "Data about tidak ditemukan"
          }
        }
      }
    },
    "/abouts/update/{id}": {
      "put": {
        "summary": "Perbarui data about",
        "operationId": "updateAbout",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" }
                },
                "required": ["title", "description"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data about berhasil diperbarui"
          },
          "404": {
            "description": "Data about tidak ditemukan"
          }
        }
      }
    },
    "/abouts/destroy/{id}": {
      "delete": {
        "summary": "Hapus data about",
        "operationId": "deleteAbout",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Data about berhasil dihapus"
          },
          "404": {
            "description": "Data about tidak ditemukan"
          }
        }
      }
    }
  }
}
