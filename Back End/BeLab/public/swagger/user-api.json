{
    "openapi": "3.0.3",
    "info": {
      "title": "User API",
      "description": "API untuk registrasi, login, logout, dan mengelola user saat ini menggunakan token (Laravel Sanctum)",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:8000"
      }
    ],
    "paths": {
      "/api/register": {
        "post": {
          "summary": "Register new user",
          "description": "Endpoint untuk registrasi user baru",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": {
                      "type": "string",
                      "format": "password"
                    },
                    "role": {
                      "type": "string",
                      "enum": ["super_admin", "admin", "user"]
                    }
                  },
                  "required": ["name", "email", "password"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User berhasil dibuat"
            },
            "400": {
              "description": "Input tidak valid"
            }
          }
        }
      },
      "/api/login": {
        "post": {
          "summary": "Login user",
          "description": "Endpoint untuk login user dan mendapatkan token",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": {
                      "type": "string",
                      "format": "password"
                    }
                  },
                  "required": ["email", "password"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Login berhasil"
            },
            "401": {
              "description": "Email atau password salah"
            }
          }
        }
      },
      "/api/logout": {
        "post": {
          "summary": "Logout user",
          "description": "Menghapus token user saat ini",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Logout berhasil"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        }
      },
      "/api/user": {
        "get": {
          "summary": "Ambil data user saat ini",
          "description": "Mengambil data user berdasarkan token",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Data user ditemukan"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        },
        "patch": {
          "summary": "Update data user saat ini",
          "description": "Melakukan update sebagian data user",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": { "type": "string" }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "User berhasil diupdate"
            },
            "400": {
              "description": "Data tidak valid"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        },
        "delete": {
          "summary": "Hapus user saat ini",
          "description": "Menghapus akun user berdasarkan token",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "User berhasil dihapus"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  }
  